<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ValidateActivity"
    android:background="@drawable/bgbill">

    <LinearLayout
        android:layout_width="457dp"
        android:layout_height="722dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginStart="1dp"
        android:layout_marginTop="135dp"
        android:background="@drawable/cvbg"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <androidx.cardview.widget.CardView
                android:layout_width="370dp"
                android:layout_height="148dp"
                android:layout_marginStart="45dp"
                android:layout_marginTop="100dp"
                android:layout_marginEnd="45dp"
                app:cardBackgroundColor="#4390AE"
                app:cardCornerRadius="25dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <TextView
                    android:id="@+id/textView14"
                    android:layout_width="221dp"
                    android:layout_height="61dp"
                    android:text="Project ID"
                    android:layout_marginLeft="25dp"
                    android:layout_marginTop="25dp"
                    android:textColor="@color/white"
                    android:textSize="30sp" />

                <TextView
                    android:id="@+id/address_tx"
                    android:layout_width="221dp"
                    android:layout_height="61dp"
                    android:layout_marginLeft="25dp"
                    android:layout_marginTop="75dp"
                    android:text="............"
                    android:textColor="@color/white"
                    android:textSize="15sp" />

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/cardView2"
                android:layout_width="370dp"
                android:layout_height="148dp"
                android:layout_marginStart="45dp"
                android:layout_marginTop="300dp"
                android:layout_marginEnd="45dp"
                app:cardBackgroundColor="#4390AE"
                app:cardCornerRadius="25dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <TextView
                    android:layout_width="250dp"
                    android:layout_height="61dp"
                    android:layout_marginLeft="25dp"
                    android:layout_marginTop="25dp"
                    android:text="Amount"
                    android:textColor="@color/white"
                    android:textSize="30sp" />

                <TextView
                    android:id="@+id/amount_tx"
                    android:layout_width="221dp"
                    android:layout_height="45dp"
                    android:layout_marginLeft="25dp"
                    android:layout_marginTop="85dp"
                    android:text=".. GC"
                    android:textColor="@color/white"
                    android:textSize="25sp" />

                <ImageView
                    android:layout_width="100dp"
                    android:layout_height="150dp"
                    android:layout_marginLeft="275dp"
                    android:src="@drawable/donation" />

            </androidx.cardview.widget.CardView>

            <Button
                android:id="@+id/validate_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="136dp"
                android:layout_marginTop="88dp"
                android:fontFamily="@font/montsemibold"
                android:letterSpacing="0.1"
                android:text="VALIDATE"
                android:textColor="@color/teal_700"
                android:textSize="25sp"
                app:backgroundTint="#FFFFFF"
                app:cornerRadius="30dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/cardView2" />
        </androidx.constraintlayout.widget.ConstraintLayout>

    </LinearLayout>

    <TextView
        android:id="@+id/textView8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="65dp"
        android:layout_marginTop="48dp"
        android:layout_marginEnd="65dp"
        android:fontFamily="@font/balooregular"
        android:text="Pay and Confirm"
        android:textColor="@color/white"

        android:textSize="40sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>